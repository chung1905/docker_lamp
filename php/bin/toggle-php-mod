#!/usr/bin/env bash
set -e

throw() {
    echo $1;
    rm ${TMP_FILE}
    exit 1;
}

# Find config file by regular expression
# $1 module name
get_file_path() {
    local conf_dir="/usr/local/etc/php/conf.d/"
    local file_count=$(find "$conf_dir" -name "docker-php-ext-$1*.ini" | tee ${TMP_FILE} | wc -l)

    if [[ ${file_count} > 1 ]]; then
        throw "$1 is ambiguous";
    fi

    file_path=$(cat ${TMP_FILE})

    if [[ ! -f "${file_path}" ]]; then
        throw "${file_path} not found."
    fi

    echo "Found $(echo ${file_path} | sed "s|^${conf_dir}\(.*.ini\)$|\1|")"
    return 0
}

# $1 config file path
toggle() {
    # Get first line
    local line=$(head -n 1 $1)
    # If start with ";" and end with ".so"
    if [[ "$line" =~ ^\;.*extension=.*\.so$ ]]; then
        echo 'Enabling...'
        sed 's/^;//' $1 > ${TMP_FILE}
    else
        echo 'Disabling...'
        sed 's/^/;/' $1 > ${TMP_FILE}
    fi

    # Apply change from temporary file
    cat ${TMP_FILE} > $1

    return 0
}

TMP_FILE=`mktemp --tmpdir`
file_path=''

get_file_path $1
toggle ${file_path}

# Restart docker & remove temporary file
kill -USR2 1
rm ${TMP_FILE}

#echo 'Done!'

